    }
    button {
      padding: 10px 20px;
      margin: 5px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: 0.3s;
    }
    button:hover {
      opacity: 0.8;
    }
    .start { background: #22c55e; color: white; }
    .pause { background: #eab308; color: black; }
    .reset { background: #ef4444; color: white; }
    .lap { background: #3b82f6; color: white; }
    ul {
      list-style: none;
      padding: 0;
      margin-top: 20px;
